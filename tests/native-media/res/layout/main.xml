<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="@string/hello"
    />
<Button
    android:id="@+id/java_player"
    android:text="@string/java_player"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    />
<Button
    android:id="@+id/openmaxal_player"
    android:text="@string/openmaxal_player"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    />
<SurfaceView
    android:id="@+id/java_surface"
    android:layout_width="400px"
    android:layout_height="224px"
    />
<SurfaceView
    android:id="@+id/openmaxal_surface"
    android:layout_width="400px"
    android:layout_height="224px"
    />
</LinearLayout>
